---
apiVersion: v1
kind: Namespace
metadata:
  name: postgres-system
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: postgres-pv-claim
  namespace: postgres-system
spec:
  storageClassName: longhorn
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: {{ psql_disk_size_gb | default(5) }}Gi
---
apiVersion: v1
kind: Secret
metadata:
  name: postgres-secret-config
  namespace: postgres-system
type: Opaque
data:
  password: {{ psql_base64_secret | default("cG9zdGdyZXMK") }}
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: postgres
  namespace: postgres-system
spec:
  replicas: 1
  template:
    metadata:
      labels:
        service: postgres
        app: postgres
    spec:
      containers:
        - name: postgres
          image: postgres:10.1
          imagePullPolicy: Never
          ports:
            - containerPort: 5432
          env:
            - name: POSTGRES_DB
              value: db0
            - name: POSTGRES_USER
              value: myuser
            - name: POSTGRES_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: postgres-secret-config
                  key: password
            - name: PGDATA
              value: /var/lib/postgresql/data/pgdata
          volumeMounts:
            - mountPath: /var/lib/postgresql/data
              name: postgres-pv-storage
      volumes:
        - name: postgres-pv-storage
          persistentVolumeClaim:
            claimName: postgres-pv-claim
  selector:
    matchLabels:
      service: postgres
      app: postgres
---
apiVersion: v1
kind: Service
metadata:
  name: postgres-service
  namespace: postgres-system
  labels:
    app: postgres
spec:
  type: LoadBalancer
  loadBalancerIP: {{ loadbalancer_pool_network | ipv4(postgresql_fourth_byte | default(40)) | ipv4("address")  }}
  ports:
    - port: 5432
  selector:
    service: postgres
    app: postgres

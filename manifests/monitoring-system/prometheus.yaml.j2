---
apiVersion: v1
kind: Namespace
metadata:
  name: monitoring-system

---
apiVersion: v1
kind: ConfigMap
metadata:
  name: prometheus-config
  namespace: monitoring-system
data:
  prom_rules.yml: |-
    # empty

  prometheus.yml: |-
    global:
      scrape_interval: 60s
      evaluation_interval: 60s
      scrape_timeout: 10s
    
    alerting:
      alertmanagers:
        - static_configs:
            - targets:
                - alertmanager:9093
    
    rule_files:
      - "prom_rules.yml"
    
    scrape_configs:
      - job_name: "prometheus"
        static_configs:
          - targets: ["localhost:9090"]

---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: prometheus-pv-claim
  namespace: monitoring-system
spec:
  storageClassName: {{ app_storage_class }}
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: {{ prometheus_disk_size_gb }}Gi

---
apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: prometheus
  namespace: monitoring-system
  labels:
    app: prometheus
    service: prometheus
spec:
  serviceName: prometheus
  replicas: 1
  selector:
    matchLabels:
      app: prometheus
      service: prometheus
  template:
    metadata:
      labels:
        app: prometheus
        service: prometheus
    spec:
      securityContext:
        runAsUser: 1000
        fsGroup: 1000
      containers:
      - name: prometheus
        image: prom/prometheus:{{ prometheus_tag }}
        resources:
          limits:
            cpu: 1000m
            memory: 6Gi
          requests:
            cpu: 100m
            memory: 4Gi
        ports:
          - containerPort: {{ prometheus_port }}
            name: http
            protocol: TCP
        volumeMounts:
          - name: config
            mountPath: "/etc/prometheus"
            readOnly: true
          - name: data
            mountPath: /prometheus
      volumes:
        - name: config
          configMap:
            name: prometheus-config
            items:
            - key: "prometheus.yml"
              path: "prometheus.yml"
            - key: "prom_rules.yml"
              path: "prom_rules.yml"
  volumeClaimTemplates:
    - metadata:
        name: data
        labels:
          app: prometheus
          service: prometheus
      spec:
        accessModes:
          - ReadWriteOnce
        storageClassName: {{ app_storage_class }}
        resources:
          requests:
            storage: {{ prometheus_disk_size_gb }}Gi

---
apiVersion: v1
kind: Service
metadata:
  name: prometheus
  namespace: monitoring-system
  labels:
    app: prometheus
    service: prometheus
spec:
  type: LoadBalancer
  loadBalancerIP: {{ loadbalancer_pool_network | ipv4(prometheus_fourth_byte) | ipv4("address") }}
  ports:
    - port: {{ prometheus_port }}
  selector:
    app: prometheus
    service: prometheus
...
